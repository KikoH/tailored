<% @portfolios.in_groups_of(6).each_with_index do |portfolios, index| %>
<div class="cbp-loadMore-block<%= index %>">
	<% portfolios.each do |portfolio| %>
	<% next if portfolio.nil? %>
	<div class="cbp-item <%#= portfolio.category %>">
		<a href="<%= portfolio_path(portfolio) %>" class="cbp-caption cbp-singlePageInline"
			data-title="<%= portfolio.title %> <br>by <%= portfolio.description %>"> 
			<div class="cbp-caption-defaultWrap">
				<img src="<%= portfolio.main_image_url(:resize) %>" alt="">
			</div>
			<div class="cbp-caption-activeWrap">
				<div class="cbp-l-caption-alignLeft">
					<div class="cbp-l-caption-body">
						<div class="cbp-l-caption-title"><%= portfolio.title %></div>
						<div class="cbp-l-caption-desc">by <%= portfolio.description %></div>
					</div>
				</div>
			</div>
		</a>
	</div>
	<% end %>
</div>
<% end %>